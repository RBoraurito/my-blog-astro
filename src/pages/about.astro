---
import { Image } from "astro:assets"

import { Container } from "@components/Container.tsx"
import {
  GitHubIcon,
  LinkedInIcon,
} from "@components/SocialIcons.tsx"
import { Mail } from "@components/icon/Mail.tsx"
import Layout from "@layouts/Default.astro"

import {frontmatter as content} from "@content/en/about-us.md"
import type { AboutPage } from "@types/about.ts"
import { marked } from "marked"
import { SocialLink } from "@components/about/SocialLink.tsx"

const { title, description, image, metaTitle, metaDescription, metaImage } = content as unknown as AboutPage
---
<Layout title={metaTitle} description={metaDescription} image={metaImage}>
  <Container className="mt-16 sm:mt-32">
    <div class="grid grid-cols-1 gap-y-16 lg:grid-cols-2 lg:grid-rows-[auto_1fr] lg:gap-y-12">
      <div class="lg:pl-20">
        <div class="max-w-xs px-2.5 lg:max-w-none">
          <Image
            src={image}
            alt=""
            width={433}
            height={433}
            sizes="(min-width: 1024px) 32rem, 20rem"
            class="aspect-square rotate-3 rounded-2xl bg-zinc-100 object-cover dark:bg-zinc-800"
          />
        </div>
      </div>
      <div class="lg:order-first lg:row-span-2">
        <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
        {title}
        </h1>
        <div class="mt-6 space-y-7 text-base text-zinc-600 dark:text-zinc-400" set:html={marked.parse(description)}></div>
      </div>
      <div class="lg:pl-20">
        <ul role="list">
          <SocialLink href="https://github.com/RBoraurito" icon={GitHubIcon} className="mt-4">
            Follow on GitHub
          </SocialLink>
          <SocialLink href="https://www.linkedin.com/in/rboraure/" icon={LinkedInIcon} className="mt-4">
            Follow on LinkedIn
          </SocialLink>
          <SocialLink
            href="mailto:ricardoboraure@gmail.com"
            icon={Mail}
            className="mt-8 border-t border-zinc-100 pt-8 dark:border-zinc-700/40"
          >
            ricardoboraure@gmail.com
          </SocialLink>
        </ul>
      </div>
    </div>
  </Container>
</Layout>